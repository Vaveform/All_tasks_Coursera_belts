#include <iostream>
#include <fstream>
#include <string>
#include <iomanip>

using namespace std;

int main()
{
	ifstream input("input.txt");
	string line;
	cout << fixed;
	while(getline(input, line))
	{
		cout << setw(20) << line << endl;
	}
	return 0;
}
